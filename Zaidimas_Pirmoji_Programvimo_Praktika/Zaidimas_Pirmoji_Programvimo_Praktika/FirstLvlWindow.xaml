                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-270.24"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Image" Width="*">
