    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="138*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Margin="-406,-661,-444,0" Grid.RowSpan="2" Source="/gameLobbyBackground2.gif" Stretch="Fill"/>

        <Image x:Name="hero1" gif:ImageBehavior.AnimatedSource="Recourses\Images\Ninja\Idle.gif" RenderTransformOrigin="0.5,0.5" Height="278" Width="329" Canvas.Left="-18" Canvas.Top="-2" Margin="380,130,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="hero2" gif:ImageBehavior.AnimatedSource="Recourses\Images\Hero2\Idle.gif" RenderTransformOrigin="0.575,0.55" Height="337" Width="364" Canvas.Left="-18" Canvas.Top="-2" Margin="213,78,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="-0.061" Y="0.097"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="hero3" gif:ImageBehavior.AnimatedSource="Recourses\Images\Hero3\Idle.gif" RenderTransformOrigin="0.5,0.5" Height="336" Width="362" Canvas.Left="-18" Canvas.Top="-2" Margin="74,88,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2">
